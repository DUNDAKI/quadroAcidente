package quadroAcidente;

import java.text.SimpleDateFormat;
import java.time.LocalDate;
import java.time.LocalDateTime;
import java.time.format.DateTimeFormatter;
import java.time.temporal.ChronoUnit;
import java.util.Calendar;
import java.util.Date;
import java.util.GregorianCalendar;
import java.util.Scanner;

public class Teste {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int dia, mes, ano2;
		float soma2;
		float ano;
		long tempo; 

		String opcao;

		float soma;

		int contagemInicial = 629;
		DateTimeFormatter formatter = DateTimeFormatter.ofPattern("dd/MM/yyyy");
		
		LocalDate hoje = LocalDate.now();
		LocalDate dia_anterior = LocalDate.now().minusDays(1);
		
		
		long days = ChronoUnit.DAYS.between(dia_anterior, hoje);
		
		System.out.println("Diferença de dias: " + days);
		
		days+=5;
		
		System.out.println("Quantidade de dias: " + days);
		
		for (int i = 1; i < days; i++) {
			System.out.println("Contador: " + i);
			
			contagemInicial+= i;
			
			System.out.println("Contador2: " + contagemInicial);
			
			
		}
		
		System.out.println("Quadro atualizado: " + contagemInicial);
		
	

		

		

		sc.close();
	}

}
