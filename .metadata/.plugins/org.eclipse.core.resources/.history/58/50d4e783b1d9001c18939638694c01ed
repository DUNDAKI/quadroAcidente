package pegandoDiaAnterior;

import java.text.SimpleDateFormat;
import java.time.format.DateTimeFormatter;
import java.util.Calendar;
import java.util.Date;

public class Pegando_dia {

	public static void main(String[] args) {
		DateTimeFormatter formatter = DateTimeFormatter.ofPattern("dd/MM/yyyy");
		SimpleDateFormat sdf = new SimpleDateFormat("dd/MM/yyyy");
		
		Date dataTeste = new Date();
		Date dataTeste2 = new Date();

		Calendar cal = Calendar.getInstance();
		
		cal.setTime(dataTeste ); 
		cal.add(Calendar.DATE, -1);
		dataTeste = cal.getTime();
		
		Calendar cal2 = Calendar.getInstance();
		cal2.setTime(dataTeste ); 
		cal2.add(Calendar.DATE, 0);
		dataTeste2 = cal2.getTime();
		
		System.out.println("Data: " +sdf.format(dataTeste));
		System.out.println("Data: " +sdf.format(dataTeste2));
	}
	

}
