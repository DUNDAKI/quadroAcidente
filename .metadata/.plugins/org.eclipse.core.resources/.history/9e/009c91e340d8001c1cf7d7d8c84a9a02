package quadroAcidente;

import java.util.Calendar;
import java.util.Scanner;

public class QuadroAcidente {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		Calendar hoje = Calendar.getInstance();
		int diaSeguinte = 0;
		int soma = 0;
		int num;
		
		int diaAnterior;

		// System.out.println("");
		int contagemInicial = 629;
		System.out.println("\n-----Contagem início-----\n");
		System.out.println("Contagem início: " + contagemInicial + " dias");
		System.out.println("20/05/2022");
		System.out.println("\n--------------------------\n");

		int ano = hoje.get(Calendar.YEAR);
		int mes = hoje.get(Calendar.MONTH);
		int dia = hoje.get(Calendar.DAY_OF_MONTH);
		// System.out.println(mes);
		// System.out.println(ano);
		
		while(dia != 0) {
			System.out.println("Informe numero:");
			num = sc.nextInt();
			System.out.println("numero informado: " + num);
			
			if(num > 30) {
				System.out.println("Maior que trinta");
			}
		}
		
		
		
		

	}

}
